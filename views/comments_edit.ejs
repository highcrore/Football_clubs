<%- include("partials/header") %>

<div class="container">
	
	<h1>Add new Comment</h1>
	<form action="/clubs/<%= club._id %>/comments/<%= comment._id %>?_method=PUT" Method="POST">
		
		<div class="form-group">
			<label for="text">Comment Area</label>
			<textarea class="form-control" name="text" id="text" rows="8" cols="80" placeholder="Comment here..." required> <%= comment.text %></textarea>
		</div>
		
		<br>
		<button type="submit" class="btn btn-primary">
			Submit Comment
		</button>
	</form>    
	
</div>



