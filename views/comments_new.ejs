<%- include("partials/header") %>

<div class="container">
	
	<h1>Add new Comment</h1>
	<form action="/clubs/<%= clubId %>/comments" Method="POST">
		<div class ="form-group">
			<label for="user"> Username</label>
			<input type="text" name ="user" id ="user" class="form-control" placeholder="Username" required>
		</div>
		<div class="form-group">
			<label for="text">Comment Area</label>
			<textarea class="form-control" name="text" id="text" rows="8" cols="80" placeholder="Comment here..." required></textarea>
		</div>
		<input type="hidden" name="clubId" value="<%= clubId %>">
		<br>
		<button type="submit" class="btn btn-primary">
			Submit Comment
		</button>
	</form>    
	
</div>



<%- include("partials/footer") %>		