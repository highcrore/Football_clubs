<%- include("partials/header") %>

<div class="container">
	<div class="row mt-4">
		<div class="col-6 show_image-container">
			 <img src ="<%= club.image %>">
		</div>	
		<div class="col-6 show_details-container">
			<h1><%=club.title%></h1>
			<p><%=club.stadium %></p>
			<table class="table">
			  <tbody>
				<tr>
				  <th scope="row">Captain</th>
				  <td><%=club.captain%></td>
				</tr>
				<tr>  
				  <th scope="row">League</th>
				  <td><%=club.league %></td>
				</tr>
				
			  </tbody>
			</table>
			<a href="/clubs/<%=club._id %>/edit">
				<button class="btn btn-outline-info btn-block mb-2">Edit</button>
			</a>
			<form action="/clubs/<%=club._id %>?_method=DELETE" method="POST">
				<button type="submit" class="btn btn-outline-danger btn-block ">Delete</button>
			</form>
		</div>
	</div>
	<div class="row show_comment-header mt-3">
		Comment header
	</div>
	<a href="/clubs/<%= club._id%>/comments/new" >
	<button class="btn btn-success btn-lg mt-3 mb-4">Add Comment</button>
	</a>
	<%  comments.forEach((comment) => { %> 
		<div class="row show_comment-container py-2 border">
			<div class="col-2 my-auto">
			<%= comment.user %>
			</div>
			<div class ="col-2 my-auto d-flex flex-wrap justify-content-center">
				<a class="btn btn-sm btn-success w-75 p-0 my-1" href="/clubs/<%= club._id%>/comments/<%=comment._id%>/edit">
				Edit
				</a>
				<form class="w-75 my-1" action="/clubs/<%=club._id%>/comments/<%=comment._id%>?_method=DELETE" method="POST">
					<button class="btn btn-sm btn-danger w-100 p-0">
						Delete
					</button>
				</form>
			</div>
			<div class="col-8 my-auto">
			<%=	comment.text %>
			</div>
		</div>
	<% }) %>
	<div class="py-5"></div>
</div>

<%- include("partials/footer") %>